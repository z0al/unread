      formStatus<span class=\\"token punctuation\\">.</span><span class=\\"token function\\">appendChild</span><span class=\\"token punctuation\\">(</span>spinner<span class=\\"token punctuation\\">)</span><span class=\\"token punctuation\\">;</span>
